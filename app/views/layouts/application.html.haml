!!!
%html
  %head
    %title Ace Ping Pong
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css", :rel => "stylesheet"}
    %meta{:content => "initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width", :name => "viewport"}
    %meta{:content => "A layout example that shows off a\n    responsive product landing page.", :name => "description"}
    %meta{:content => "Ace Ping Pong", :name => "apple-mobile-web-app-title"}
    -#%link{:href => "img/loading.png", :rel => "apple-touch-startup-image"}
    -#%link{:href => "img/app_icons/Icon76@2x.png", :rel => "apple-touch-icon"}
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
    %meta{:content => "yes", :name => "mobile-web-app-capable"}

    = javascript_include_tag 'vendor/modernizr'
  %body
    %div.orange-bar
    .contain-to-grid
      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name
            %h1
              = link_to "Ace Ping Pong", root_path
        .top-bar-section
        %section.top-bar-section
          %ul.right
            %li.divider
            %li
              = link_to "Past Games", games_path
            %li.divider
            %li
              = link_to "Add Games", new_game_path
            %li.divider
            %li
              = link_to "Add Player", new_player_path
            %li.divider

    .row
      .large-12.columns
        - if flash[:notice]
          .alert-box.success{'data-alert' => nil}
            = flash[:notice]
            %a.close{href: "#"} &times;

        - if flash[:alert]
          .alert-box.alert{'data-alert' => nil}
            = flash[:alert]
            %a.close{href: "#"} &times;
        .container
          = yield

    .icon-bar.four-up#footer.show-for-small-only
      %a.item{href: games_path, "aria-labelledby" => "#itemlabel1"}
        %i.fi-arrow-left
        %label#itemlabel1 Past Games
      %a.item{href: new_game_path, "aria-labelledby" => "#itemlabel2"}
        %i.fi-trophy
        %label#itemlabel2 Add Game
      %a.item{href: root_path, "aria-labelledby" => "#itemlabel3"}
        %i.fi-home
        %label#itemlabel3 Home
      %a.item{href: new_player_path, "aria-labelledby" => "#itemlabel4"}
        %i.fi-plus
        %label#itemlabel5 New Player

    = javascript_include_tag 'application'
